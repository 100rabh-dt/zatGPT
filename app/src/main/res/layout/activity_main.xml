<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/mainbg"
android:orientation="vertical"
tools:context=".MainActity">


<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="12dp"
    android:text="@string/app_name"
    android:textColor="@color/white"
    android:textSize="22sp"
    android:textStyle="bold" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:gravity="center">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="15dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/zicon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="13dp"
        android:layout_gravity="center_horizontal"
        android:text="ZatGPT: Your AI companion, created by 100rabh-dt using OpenAI. Engage in interactive conversations with text, audio, and image outputs. Explore the future of AI interaction through one exceptional app."
        android:textColor="@color/white"
        android:textSize="11sp"
        />

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="90dp"
    android:gravity="center"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"

        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:id="@+id/talkWithBot"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/mainbtn">

        <ImageView
            app:tint="@color/white"
            android:layout_width="36dp"

            android:layout_height="36dp"
            android:src="@drawable/vccommand" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Talk with Bot"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"

            android:layout_weight="1"
            android:id="@+id/chatWithBot"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/mainbtn">

            <ImageView
                app:tint="@color/white"
                android:layout_width="36dp"

                android:layout_height="36dp"
                android:src="@drawable/online_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Chat with Bot"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>



    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:weightSum="1">



        <LinearLayout
            android:id="@+id/generateImage"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"

            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/mainbtn" >

            <ImageView
                app:tint="@color/white"
                android:layout_width="36dp"

                android:layout_height="36dp"
                android:src="@drawable/voicetoimg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Generate Image"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>

